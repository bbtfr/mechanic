<%= content_for :title do %>
  申请堂主
<% end %>

<%= simple_form_for(@user_group, url: user_group_path) do |f| %>
  <%= f.error_messages %>

  <div class="content-padded margin-top-large">
    <%= f.input :nickname %>
    <%= f.input :description, input_html: { rows: 4 } %>

    <%= f.button :submit, "提交申请", class: "btn-block btn-positive" %>
  </div>
<% end %>
