<%= content_for :title do %>
  我的分堂
<% end %>

<div class="content-padded">
  <h3 class="text-center"><%= @user_group.nickname %></h3>
</div>

<div class="hero segmented-items segmented-items-bordered text-center">
  <div class="item">
    <h2><%= number_with_delimiter(@user_group.settled_orders_count) %></h2>
    <p>分堂业绩（笔）</p>
  </div>
  <div class="item">
    <h2><%= number_with_delimiter(@user_group.total_commission) %></h2>
    <p>分堂佣金</p>
  </div>
</div>

<ul class="table-view">
  <li class="table-view-cell">
    <%= link_to "分享二维码", weixin_qr_code_user_group_path, class: "navigate-right" %>
  </li>
  <li class="table-view-cell">
    <%= link_to "分堂成员", users_user_group_path, class: "navigate-right" %>
  </li>
</ul>
