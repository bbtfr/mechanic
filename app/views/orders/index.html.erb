<%= content_for :title do %>
  订单列表
<% end %>

<nav class="bar bar-nav bar-standard">
  <div class="segmented-control">
    <%= link_to "待服务", orders_path(state: :paids), class: "control-item#{" active" if @state == :paids}" %>
    <%= link_to "服务中", orders_path(state: :workings), class: "control-item#{" active" if @state == :workings}" %>
    <%= link_to "已结束", orders_path(state: :finisheds), class: "control-item#{" active" if @state == :finisheds}" %>
  </div>
</nav>

<% @orders = @orders.includes(:skill, :mechanic) %>

<div class="content-padded">
  <%= index_for @orders, class: "table" do |i| %>
    <%= i.attribute :appointment, format: :short %>
    <%= i.attribute :skill, with: :name %>
    <%= i.attribute :price %>
    <%= i.attribute :mechanic, value: :mechanic_nickname %>
    <%= i.actions :show do |act| %>
      <%= act.action_link :cancel do %>
      <% end %>
    <% end %>
  <% end %>
</div>
