<% if @order_params %>
  <script type="text/javascript">
    wx.config(<%= raw Weixin.get_jssign_package(request.url).merge(debug: true, jsApiList: %w(chooseWXPay)).to_json %>);
    wx.error(function(res){ console.log(res) });
    wx.ready(function() {
      alert("<%= raw @order_params.to_json %>");
      params = <%= raw @order_params.to_json %>;
      params["success"] = function (res) { window.location.href = "/orders/<%= @order.id %>/result"; }
      wx.chooseWXPay(params);
    });
  </script>
<% end %>
