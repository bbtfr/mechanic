<h3 class="page-header">订单管理</h3>

<%= index_for [ :admin, @orders ], class: "table table-hover data-tables" do |i| %>
  <%= i.attribute :user, with: :nickname %>
  <%= i.attribute :contact %>
  <%= i.attribute :skill, with: :name %>
  <%= i.attribute :price %>
  <%= i.attribute :mechanic, with: :user_nickname, if_raise: nil %>
  <%= i.attribute :state do |order| %>
    <% if order.canceled? %>
      <%= te order, :cancel %>
    <% else %>
      <%= te order, :state %>
    <% end %>
  <% end %>

  <%= i.actions do |a| %>
    <%= a.action_link :show, url: admin_refund_path(i.object) %>
    <%= a.action_link :confirm, url: confirm_admin_refund_path(i.object), method: :post, confirm: "你确定要通过这条申请？" %>
  <% end %>
<% end %>
