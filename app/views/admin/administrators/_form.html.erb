<div class="row">
  <div class="col-md-7">
    <%= bootstrap_simple_form_for([ :admin, @admin ]) do |f| %>
      <%= f.error_messages %>

      <%= f.input :nickname %>
      <%= f.input :mobile %>

      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <% unless current_admin == @admin %>
        <%= f.input :role, collection: enum_option_pairs(Administrator, :role) %>
      <% end %>

      <%= f.button :submit, "确定", class: "btn-primary pull-right" %>
    <% end %>
  </div>
</div>
