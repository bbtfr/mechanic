<h3 class="page-header">商家详情 #<%= @merchant.id %></h3>

<div class="row">
  <div class="col-md-2 col-xs-4">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to "商家详情", admin_merchant_path(@merchant) %></li>
      <li><%= link_to "佣金设置", settings_admin_merchant_path(@merchant) %></li>
    </ul>
  </div>

  <div class="col-md-10 col-xs-8">

    <div class="row">
      <div class="col-sm-3 text-right">
        <%= image_tag(@merchant.avatar.url(:thumb)) %>
      </div>

      <div class="col-sm-9">
        <%= show_for @merchant, class: "dl-horizontal" do |i| %>
          <%= i.fields_for :merchant, model: Merchant do |ii| %>
            <%= ii.attribute :nickname %>
            <%= ii.attribute :mobile %>
          <% end %>

          <%= i.attribute :nickname %>
          <%= i.attribute :qq %>
          <%= i.attribute :balance %>

          <%= i.attribute :available_orders_count %>
          <%= i.attribute :total_cost %>

        <% end %>
      </div>
    </div>

  </div>
</div>

<div class="pull-right">
  <%= link_to "相关订单", admin_merchant_orders_path(@merchant), class: "btn btn-primary" %>
</div>
