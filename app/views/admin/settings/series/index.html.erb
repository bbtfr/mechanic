<% content_for :subtitle do %>
  <%= link_to "添加车系", new_admin_settings_series_path %>
<% end %>

<div class="row">
  <%= render "admin/settings/side_menu" %>

  <% @series = @series.includes(:brand) %>

  <div class="col-md-10 col-xs-8">
    <%= index_for [ :admin, :settings, @series ], class: "table table-hover data-tables" do |i| %>
      <%= i.attribute :name %>
      <%= i.attribute :brand, with: :name, if_raise: nil  %>
      <%= i.actions :edit, :destroy %>
    <% end %>
  </div>
</div>
