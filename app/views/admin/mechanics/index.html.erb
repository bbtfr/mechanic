<h3 class="page-header">技师管理</h3>

<%= index_for [ :admin, @mechanics ], class: "table table-hover data-tables" do |i| %>
  <%= i.attribute :avatar do |user| %>
    <%= image_tag(user.avatar.url(:thumb)) %>
  <% end %>
  <%= i.attribute :nickname %>
  <%= i.attribute :mobile %>
  <%= i.attribute :weixin_openid %>

  <%= i.actions do |a| %>
    <%= a.action_link :show do %>
      <%= link_to t(:"index_for.actions.show"), admin_mechanic_path(i.object) %>
    <% end %>
    <%= a.action_link :destroy %>
  <% end %>
<% end %>
