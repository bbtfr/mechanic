<h3 class="page-header">提现管理</h3>

<%= index_for [ :admin, @withdrawals ], class: "table table-hover data-tables" do |i| %>
  <%= i.attribute :user, with: :nickname %>
  <%= i.attribute :amount %>

  <% if i.object.paid? %>
    <%= i.actions :show %>
  <% else %>
    <%= i.actions do |a| %>
      <%= a.action_link :show %>
      <%= a.action_link :confirm do %>
        <%= link_to t(:"index_for.actions.confirm"), confirm_admin_withdrawal_path(i.object), data: { method: :post, confirm: "你确定要通过这条申请？" } %>
      <% end %>
    <% end %>
  <% end %>

<% end %>
