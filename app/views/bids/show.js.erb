<% if @order.canceled? %>
  clearInterval(interval);
  alert("非常抱歉\n用户取消订单\n点击确认关闭窗口");
  closeWindow();
<% elsif @order.mechanic_id %>
  clearInterval(interval);
  <% if @order.mechanic_id == current_user.mechanic_id %>
    if (confirm("抢单成功，电话确认一下吧\n点击确认拨打电话")) {
      window.location.href = "tel://<%= @order.user.mobile %>";
    } else {
      window.location.href = "<%= order_path(@order) %>";
    }
  <% else %>
    alert("非常抱歉\n错失一单，再看看别的吧\n点击确认关闭窗口");
    closeWindow();
  <% end %>
<% end %>

